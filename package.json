{
  "name": "qa-video",
  "version": "1.0.1",
  "description": "Generate flashcard videos from YAML Q&A files with TTS narration",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "qa-video": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "vite build",
    "typecheck": "tsc --noEmit",
    "release": "npm version patch && npm run build && npm publish",
    "release:minor": "npm version minor && npm run build && npm publish",
    "release:major": "npm version major && npm run build && npm publish",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "dev:server": "tsx src/server.ts",
    "dev:web": "cd web && npx vite",
    "dev:app": "npx concurrently \"npm run dev:server\" \"npm run dev:web\""
  },
  "license": "MIT",
  "dependencies": {
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "@napi-rs/canvas": "^0.1.92",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "commander": "^14.0.3",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.3",
    "google-auth-library": "^10.5.0",
    "googleapis": "^171.4.0",
    "kokoro-js": "^1.2.1",
    "open": "^11.0.0",
    "yaml": "^2.8.2",
    "express": "^5.1.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/better-sqlite3": "^7.6.13",
    "@types/fluent-ffmpeg": "^2.1.28",
    "@types/fs-extra": "^11.0.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.2",
    "@types/node": "^25.2.3",
    "concurrently": "^9.1.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^6.3.5"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  }
}
